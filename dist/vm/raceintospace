#!/bin/bash

### BEGIN INIT INFO
# Provides: raceintospace
# Required-Start: $local_fs $network $remote_fs
# Required-Stop: $local_fs $network $remote_fs
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
### END INIT INFO

start() {
  raceintospace BARIS_DATA=/usr/share/raceintospace
  poweroff
}

stop() {
    false
}

case "$1" in 
    start)
       start
       ;;
    stop)
       stop
       ;;
    restart)
       stop
       start
       ;;
    status)
       ;;
    *)
       echo "Usage: $0 {start|stop|status|restart}"
esac


exit 0

